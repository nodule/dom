{
  "name": "addUIEvent",
  "ns": "dom",
  "description": "Add UI Event Listener",
  "async": true,
  "phrases": {
    "active": "Adding {{input.event}} handler"
  },
  "ports": {
    "input": {
      "in": {
        "title": "Input",
        "type": "any",
        "async": true,
        "default": null
      },
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element",
        "async": true
      },
      "preventDefault": {
        "type": "boolean",
        "title": "Prevent Default Event",
        "default": true
      },
      "event": {
        "type": "string",
        "enum": [
          "focusin",
          "focusout",
          "DOMActivate"
        ],
        "title": "Dom Event"
      }
    },
    "output": {
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element"
      },
      "out": {
        "type": "any",
        "title": "Output"
      },
      "event": {
        "type": "object",
        "title": "Event"
      }
    }
  }
}
