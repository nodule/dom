{
  "name": "addFormEvent",
  "ns": "dom",
  "description": "Add Form Event Listener",
  "phrases": {
    "active": "Adding {{input.event}} handler"
  },
  "ports": {
    "input": {
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element"
      },
      "event": {
        "type": "string",
        "enum": [
          "select",
          "change",
          "submit",
          "reset",
          "focus",
          "blur"
        ],
        "title": "Dom Event"
      }
    },
    "output": {
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element"
      },
      "event": {
        "type": "object",
        "title": "Event"
      }
    }
  }
}
