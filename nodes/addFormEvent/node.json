{
  "name": "addFormEvent",
  "ns": "dom",
  "description": "Add Form Event Listener",
  "async": true,
  "phrases": {
    "active": "Adding {{input.event}} handler"
  },
  "ports": {
    "input": {
      "in": {
        "title": "Input",
        "type": "any",
        "async": true,
        "default": null
      },
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element",
        "async": true
      },
      "preventDefault": {
        "type": "boolean",
        "title": "Prevent Default Event",
        "default": true
      },
      "event": {
        "type": "string",
        "enum": [
          "select",
          "change",
          "submit",
          "reset",
          "focus",
          "blur"
        ],
        "title": "Dom Event"
      }
    },
    "output": {
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element"
      },
      "out": {
        "type": "any",
        "title": "Output"
      },
      "event": {
        "type": "Event",
        "title": "Event"
      }
    }
  }
}
