{
  "name": "addPointerEvent",
  "ns": "dom",
  "description": "Add Pointer Event Listener",
  "phrases": {
    "active": "Adding {{input.event}} handler"
  },
  "ports": {
    "input": {
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element"
      },
      "preventDefault": {
        "type": "boolean",
        "title": "Prevent Default Event",
        "default": true
      },
      "event": {
        "type": "string",
        "enum": [
          "pointerdown",
          "pointerup",
          "pointercancel",
          "pointermove",
          "pointerover",
          "pointerout",
          "pointerenter",
          "pointerleave",
          "gotpointercapture",
          "lostpointercapture"
        ],
        "title": "Pointer Event"
      }
    },
    "output": {
      "element": {
        "type": "HTMLElement",
        "title": "Dom Element"
      },
      "event": {
        "type": "object",
        "title": "Event"
      }
    }
  }
}
